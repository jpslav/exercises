<div id="application-header">

  <div id="application-header-color-bar"></div>

  <div id="application-header-between-bars">

    <%= render  :partial  => "layouts/application_account_bar", 
                :locals   => { :icon_color => "white" } %>

    <div id="application-header-logo">
      <a href="<%= root_path %>" id="application-header-logo-link"></a>
    </div>

  </div>

  <div id="top-nav-frame" class="<%= yield :top_nav_class %>">
    <div id="top-nav-content">
      <div id="top-nav-links">
        <ul>
          <li>
            <%= render "layouts/application_top_nav_link", 
                       target_text:            "ABOUT",
                       target_id:              "top-nav-about-link",
                       target_path:            "#",
                       target_current_symbol:  :top_nav_about_current %>
          </li>
          <li>
            <%= render "layouts/application_top_nav_link", 
                       target_text:            "API",
                       target_id:              "top-nav-api-link",
                       target_path:            api_path,
                       target_current_symbol:  :top_nav_api_current %>
          </li>
          <li>
            <%= render "layouts/application_top_nav_link", 
                       target_text:            "SIGN IN",
                       target_id:              "top-nav-account-link",
                       target_path:            "#",
                       target_current_symbol:  :top_nav_account_current,
                       last:                   true %>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <noscript>
    <%= render partial: "shared/alert", locals: { alert: javascript_not_enabled_alert } %>
  </noscript>

</div>
