<p>
  <b>Exercise <%= @exercise.name %></b>
  <% if !@exercise.credit.nil? && @exercise.credit > 0 %>(<%= @exercise.credit %> pt):<% end %>
</p>

<%= @exercise.content_html.html_safe %>

<%= render :partial => 'exercises/questions/index', :locals => {:exercise => @exercise} %>

<br/>

<%= render :partial => 'collaborators/index', :locals => {:collaborators => @exercise.collaborators} %>

<br/>

<% if @exercise.can_be_updated_by?(current_user) || user_is_admin? %>
  <%= link_to 'Add collaborator', new_exercise_collaborator_path(@exercise) %>

  <br/><br/>
<% end %>

<p>
  <b>License:</b>
  <%= @exercise.license.try(:name) %>
</p>

<p>
  <b>Embargoed until:</b>
  <%= @exercise.embargoed_until %>
</p>

<p>
  <b>Only embargo solutions:</b>
  <%= @exercise.only_embargo_solutions %>
</p>

<%= link_to 'Edit', edit_exercise_path(@exercise) %> |
<%= link_to 'Back', @exercise.is_published? ? exercises_path : @exercise.lists.first %>
