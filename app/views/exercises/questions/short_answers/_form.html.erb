<% # Clients of this partial must supply the following variable:
   # q %>

<div class="answers_form">
  <p>
    <b>Short answers</b>
  </p>
  <%= q.fields_for :short_answers do |a| %>
    <div class="answer_form">
      <p>
        <b><%= q.object.id ? "Short answer #{q.object.position}" : 'New short answer' %>
        (Suggested credit: <%= q.number_field :credit, :size => 3, :maxlength => 3, :class => 'inline' %>)</b>
      </p>

      <div class="field">
        <%= a.label :content %><br />
        <%= a.text_area :content, :class => "markItUp" %>
      </div>
      <div class="field">
        <%= a.label :short_answer %><br />
        <%= a.text_area :short_answer %>
      </div>

      <%= a.link_to_remove "Remove this short answer", confirm: 'Are you sure you wish to remove this short answer and all associated content?' %><br/><br/>
    </div>
  <% end %>

  <%= q.link_to_add "Add short answer", :short_answers %>
</div>

<br/>
