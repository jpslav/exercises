<% # Clients of this partial must supply the following variable:
   # question %>

<div class="answers">
  <% unless question.short_answers.empty? %>
    <p>
      <b>Short answers</b>
    </p>
  <% end %>

  <% question.short_answers.each do |answer| %>
    <%= render :partial => 'exercises/questions/short_answers/show', :locals => {:answer => answer} %>
  <% end %>
</div>
