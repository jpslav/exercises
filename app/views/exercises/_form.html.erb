<%= nested_form_for(@exercise) do |f| %>
  <% if @exercise.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@exercise.errors.count, "error") %> prohibited this exercise from being saved:</h2>

      <ul>
      <% @exercise.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <b><%= @exercise.id ? "Exercise e#{@exercise.number}v#{@exercise.version}" : 'New exercise' %></b>
  </p>
  <div class="field">
    <%= f.text_area :content %>
  </div>
  <div class="field">
    <%= f.label :credit %>
    <%= f.text_field :credit %>
  </div>

  <%= render :partial => 'exercises/questions/form', :locals => {:f => f} %>

  <div class="field">
    <%= label_tag :embargo %>
    <%= check_box_tag :embargo, @exercise.is_embargoed? %>
  </div>
  <div class="field">
    <%= f.label :only_embargo_solutions %>
    <%= f.check_box :only_embargo_solutions %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
