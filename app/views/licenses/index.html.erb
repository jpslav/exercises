<%= page_heading 'Licenses' %>

<table>
  <tr>
    <th>Short name</th>
    <th>Long name</th>
    <th>Url</th>
    <th>Partial name</th>
    <th>Is default</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @licenses.each do |license| %>
  <tr>
    <td><%= license.short_name %></td>
    <td><%= license.long_name %></td>
    <td><%= license.url %></td>
    <td><%= license.partial_name %></td>
    <td><%= license.is_default %></td>
    <td><%= link_to 'Show', license %></td>
    <td><%= link_to 'Edit', edit_license_path(license) %></td>
    <td><%= link_to 'Destroy', license, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New License', new_license_path %>
