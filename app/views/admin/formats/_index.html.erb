<%# Clients of this partial must provide the following variables:
    formats
    action_partial %>

<%= osu.action_list(
    records: formats,
    list: {
      headings: ['Name', 'Description', 'Actions'],
      widths: ['30%', '60%', '10%'],
      data_procs:
        [
          lambda { |format| format.name || '---' },
          lambda { |format| truncate(format.description) || '---' },
          lambda { |format| "<span id=format-#{format.id}-actions>
                                #{render partial: action_partial,
                                         locals: {format: format}}
                              </span>".html_safe }
        ]
    }
  ) %>
