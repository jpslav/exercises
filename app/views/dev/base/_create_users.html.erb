<%= osu.section_block "Create a new user" do %>

  <%= lev_form_for :create, url: dev_users_create_path, remote: true, 
                   html: {id: 'create-user-form'} do |f| %>

    First name <%= f.text_field :first_name, class: 'm-wrap' %><br/>
    Last name <%= f.text_field :last_name, class: 'm-wrap' %><br/>
    Username <%= f.text_field :username, class: 'm-wrap' %><br/>
    Admin? <%= f.check_box :is_administrator, class: 'm-wrap m-checkbox' %><br/>

    <%= f.submit 'Register', class: 'm-btn blue' %>
  <% end %>

<% end %>

<%= osu.section_block "Generate new users" do %>
    <%= lev_form_for :generate, url: dev_users_generate_path, remote: true,
                     html: {id: 'generate-users-form'} do |f| %>
                     
      Generate <%= f.text_field :count, style: 'width:30px', class: 'm-wrap' %> user(s) 
      <%= f.submit 'Do it now!', class: 'm-btn blue' %>
    <% end %>
<% end %>