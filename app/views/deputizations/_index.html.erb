<% # Clients of this partial must provide the following variables:
   # deputizations
%>

<%= osu.action_list(
    records: deputizations,
    list: {
      headings: ['Type', 'Name', 'Actions'],
      widths: ['30%', '60%', '10%'],
      data_procs:
        [
          lambda { |deputization| deputization.deputy_type || '---' },
          lambda { |deputization| deputization.deputy.name || '---' },
          lambda { |deputization| render partial: 'deputizations/destroy',
                                         locals: {deputization: deputization} }
        ]
    }
  ) %>
