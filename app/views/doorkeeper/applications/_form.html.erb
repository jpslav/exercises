<% owner = @user_group || application.owner %>
<%= form_for([@user_group, :oauth, application]) do |f| %>
  <fieldset>
    <% if application.errors.any? %>
      <div class="alert-message error" data-alert><a class="close" href="#">Ã—</a><p>Whoops! Check your form for possible errors</p></div>
    <% end %>

    <div class="clearfix">
      <%= f.label :name %>
      <div class="input">
        <%= f.text_field :name %>
        <%= errors_for application, :name %>
      </div>
    </div>

    <div class="clearfix">
      <%= f.label :redirect_uri %>
      <div class="input">
        <%= f.text_field :redirect_uri %>
        <%= errors_for application, :redirect_uri %>
        <% if Doorkeeper.configuration.test_redirect_uri %>
          <span class="help-inline">Use <%= Doorkeeper.configuration.test_redirect_uri %> for local tests</span>
        <% end %>
      </div>
    </div>

    <% if @user.is_admin? %>
    <div class="clearfix">
      <%= f.label :trusted? %>
      <div class="input">
        <%= f.check_box :trusted %>
        <%= errors_for application, :trusted %>
      </div>
    </div>
    <% end %>

    <div class="clearfix"></div>

    <div class="actions">
      <%= f.submit :Submit, :class => "btn primary" %>
      <%= link_to "Cancel",
                  user_group_oauth_applications_path(owner), :class => "btn" %>
    </div>
  </fieldset>
<% end %>

