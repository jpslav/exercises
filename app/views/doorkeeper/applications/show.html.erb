<%= page_heading "OAuth Application: #{@application.name}" %>

<div class="span10">
  <h4>Callback url:</h4>
  <p><code id="callback_url"><%= @application.redirect_uri %></code></p>

  <h4>Application Id:</h4>
  <p><code id="application_id"><%= @application.uid %></code></p>

  <h4>Secret:</h4>
  <p><code id="secret"><%= @application.secret %></code></p>

  <h4>Link to authorization code:</h4>
  <p><%= link_to 'Authorize', oauth_authorization_path(:client_id => @application.uid, :redirect_uri => @application.redirect_uri, :response_type => 'code' ) %></p>
</div>

<div style="clear:both">
  <%= link_to 'All Applications', oauth_applications_path %> | 
  <%= link_to 'Edit', edit_oauth_application_path(@application) %> |
  <%= link_to 'Remove', [:oauth, @application], :method => :delete, :data => { :confirm => "Are you sure?" } %>
</div>
