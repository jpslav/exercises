<% # Clients of this partial must supply the following variable:
   # question_dependency_pair %>

<div class="question_dependency_pair">
  <li>This question <%= question_dependency_pair.is_requirement? ? 'requires' : 'is supported by' %>
        question <%= question_dependency_pair.independent_question.position %>.
        <% if question_dependency_pair.can_be_destroyed_by?(current_user) || user_is_admin? %>
        | <%= link_to 'Remove', question_dependency_pair, method: :delete, data: {
          confirm: "Are you sure you want to remove this question's dependency on question #{question_dependency_pair.independent_question.position}?"
        } %>
        <% end %></li>
</div>
