<h1>You are a member of the following groups:</h1>

<table>
  <tr>
    <th>Group name</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% current_user.user_group_users.each do |user_group_user| %>
  <tr>
    <td><%= user_group_user.user_group.full_name %></td>
    <td><%= user_group_user.is_manager ? 'Manager' : 'Member' %></td>
    <td><%= link_to 'Show', user_group_user.user_group %> |</td>
    <td><%= link_to 'Edit', edit_user_group_path(user_group_user.user_group) %> |</td>
    <td><%= link_to 'Leave group', user_group_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

